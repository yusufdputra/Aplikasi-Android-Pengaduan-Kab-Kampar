<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

  <include layout="@layout/pesan1"/>
  <include layout="@layout/pesan2"/>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_road_sign_pana"
        android:layout_width="wrap_content"
        android:layout_height="300dp"/>
    <TextView
        android:paddingHorizontal="@dimen/medium"
        android:layout_marginTop="-20dp"
        android:textColor="@color/eastern_blue"
        android:text="@string/pesan_batasan"
        android:textAlignment="center"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </LinearLayout>


</LinearLayout>